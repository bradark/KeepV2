      <body id="body" style="background-color: #2F3136;">
        <div class="container" style="padding-top:50px;">
          <div class="row">
            <div style="padding-top:25px;" class="col-sm">
              <div class="card" style="border-radius:10px; padding:25px; background-color: #343A40; min-width: 500px; min-height:250px;">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5 style="color:white;" class="card-title">Sales</h5>
                                <p style="color:white;" class="card-text">Past Sales</p>
                                <a style="color:white;" href="/sales" class="btn btn-danger">Go to Sales</a>
                            </div>
                            <div class="col-xs-6">
                                <a style="font-size:75px; color:white; padding:50px;"><%= user.salescount %></a>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
            <div style="padding-top:25px;" class="col-sm">
              <div class="card" style="border-radius:10px; background-color: #343A40; padding:25px; min-width: 500px; min-height:250px;">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5 style="color:white;" class="card-title">Inventory</h5>
                                <p style="color:white;" class="card-text">Total Items</p>
                                <a style="color:white;" href="/inventory" class="btn btn-danger">Go to Inventory</a>
                            </div>
                            <div class="col-xs-6">
                                <a style="font-size:75px; color:white; padding:50px;"><%= user.inventorycount %></a>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
            <div style="padding-top:25px;" class="col-sm">
              <div class="card" style="border-radius:10px; background-color: #343A40; padding:25px; min-width: 500px; min-height:250px;">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5 style="color:white;" class="card-title">Items in Transit / Orders</h5>
                                <p style="color:white;" class="card-text">Total items</p>
                                <a href="/orders" class="btn btn-danger">Go to Orders</a>
                            </div>
                            <div class="col-xs-6">
                                <a  style="font-size:75px; color:white; padding:50px;"><%= user.ordercount %></a>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>
            <div style="padding-top:25px;" class="col-sm">
              <div class="card" style="border-radius:10px; background-color: #343A40; min-width: 500px; min-height:250px;">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5 style="color:white;" class="card-title">Profile</h5>
                                <p style="color:white;" class="card-text">Account Info</p>
                                <p style="color:white;">Username: <%= user.name %></p>
                                <p style="color:white;">Email: <%= user.email %></p>
                                <a href="#" class="btn btn-danger">Go to Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
            </div>

          </div>
        </div>
        <canvas style="width:100%" id="canvas"></canvas>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script>
          //Get the canvas element.



            $('#login').click(function () {
              $('#loadMe').modal({
                  backdrop: "static", //remove ability to close modal with click
                  keyboard: false, //remove option to close with keyboard
                  show: true //Display loader!
                });
            });

            $('body').on('click', '#body', function () {
              $('#loadMe').modal('hide');
            });

            $(window).load(function (){
              $('#loadMe').modal('show');
            })

</script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
